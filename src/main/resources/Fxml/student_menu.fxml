<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>

<GridPane alignment="CENTER" hgap="10" vgap="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controller.StudentMenuController">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Student Menu" GridPane.columnIndex="0" GridPane.rowIndex="0"
           styleClass="scene-title">
        <font>
            <Font name="Tahoma" size="20"/>
        </font>
    </Label>

    <Button fx:id="borrowedBookButton" onAction="#handleBorrowedBookButton" text="Buku Terpinjam"
            GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="login-button"/>

    <Button fx:id="borrowBookButton" onAction="#handleBorrowBookButton" text="Pinjam Buku"
            GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="login-button"/>

    <Button fx:id="returnBookButton" onAction="#handleReturnBookButton" text="Kembalikan Buku"
            GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="login-button"/>
</GridPane>
