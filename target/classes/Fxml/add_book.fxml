<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddBookController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <Label fx:id="sceneTitleLabel" styleClass="scene-title" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label styleClass="form-label" text="ID Buku    :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="bookIdField" editable="false" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label styleClass="form-label" text="Judul Buku :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="bookTitleField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label styleClass="form-label" text="Penulis    :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="authorField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label styleClass="form-label" text="Stok       :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="stockField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="errorMessageLabel" prefHeight="17.0" prefWidth="0.0" styleClass="error-message" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />

    <Button fx:id="submitButton" styleClass="login-button" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Button fx:id="backButton" styleClass="login-button" text="Kembali" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
